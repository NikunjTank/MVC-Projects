
@model Vidly_Dec_2019.ViewModels.MovieViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@*ActionName, ControllerName*@
@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)

        @*Here the m => m.Movie.GenreId specifies dropdownlist is for Moview GenreId property*@
        @*Model.Genres is our ViewModel here*@
        @*new SelectList(Model.Genres, "Id", "Name") specifies list of items for the dropdown list
            Now in it the 1st argument(Model.Genres) contains list of items i.e. our Model class
            Now in it the 2nd argument we need to specify the name of the property in Genres class that holds the value for each item i.e. Id property and 3rd item is the property that holds the text for each item  *@
        @*"Select Genre Type"  specifies argument which contains first drop down item*@

        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre Type", new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    ////Rachit
    ///

<div class="form-group">
    @Html.LabelFor(m => m.Movie.NumberInStock)
    @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
</div>


    @Html.HiddenFor(m => m.Movie.Id)

    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Save</button>


}





@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
